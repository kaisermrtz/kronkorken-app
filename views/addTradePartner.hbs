<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{{pageTitle}}</title>

    {{> import}}
    <style>
    </style>
  </head>
  <body>
    {{> header}}
    <div class="container">
      <h1>Tauschpartner hinzufügen</h1>
      <div id="error" class="alert alert-danger" role="alert" hidden>Fehler im Formular</div>
      <form method="post">
        <div class="form-group">
          <label for="name">Name *</label>
          <input type="text" name="name" class="form-control" placeholder="Name" required/>
        </div>
        <div class="form-group">
          <label for="land">Land *</label>
          <input type="text" name="country" class="form-control" placeholder="Land" required/>
        </div>
        <div class="form-group">
          <label for="email">Email *</label>
          <input type="email" name="email" class="form-control" placeholder="E-Mail" required/>
        </div>
        <div class="form-group">
          <label for="website">Website</label>
          <input type="text" name="website" class="form-control" placeholder="Website" />
        </div>
        <p>
          * benötigte Felder.
        </p>
        <button class="btn btn-default">Hinzufügen</button>
      </form>
    </div>

    {{> importscript}}
    <script>
      var query = getUrlVars();

      if(query.success == "false"){
        $('#error').show();
      }
    </script>
  </body>
</html>
